  <body>

    

    <main role="main">

      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3">Hello :)</h1>
          <p>WHAT UP MY NAME KELSEY AND UHHHHH UHHHHHHHMMMMM I LOVE HANGING OUT AND JUST LIKE GENERALLY HAVING A GOOD TIME!!!!!.</p>
          <%= link_to 'New Project', new_project_path %>
        </div>
      </div>

      <div class="container">
        <div class="row">
        <% @projects.each do |project| %>
          <div class="col-md-4">
            <div class="card body">
              <h5 class="card-title">  <td><%= project.title %></td></h5>

              <% if project.description.length > 100 %>
                <p class="card-text"><td><%= project.description.slice(0..100) ... %></td> <p>
              <% else %>
                <p class="card-text"><td><%= project.description%></td> <p>
              <% end %>

              <td><%= link_to 'Show', project %></td>

              <% if user_signed_in? %>
                <td><%= link_to 'Edit', edit_project_path(project) %></td>
                <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>

        <hr>

      </div> <!-- /container -->

    </main>

